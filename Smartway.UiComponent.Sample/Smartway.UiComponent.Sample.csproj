  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Smartway.UiComponent\Smartway.UiComponent.csproj" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Buttons\Button.xaml">
